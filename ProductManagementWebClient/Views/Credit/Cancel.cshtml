@{
    ViewData["Title"] = "Giao dịch bị hủy";
    Layout = "~/Views/Shared/_JobPostManagementLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-warning" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="text-warning mb-3">Giao dịch đã bị hủy</h2>

                    <p class="lead mb-4">
                        Giao dịch nạp tiền của bạn đã bị hủy.
                        Không có khoản tiền nào được trừ từ tài khoản của bạn.
                    </p>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        Bạn có thể thử lại giao dịch nạp tiền bất cứ lúc nào.
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Deposit", "Credit")" class="btn btn-primary mr-2">
                            <i class="fas fa-redo mr-2"></i>
                            Thử lại
                        </a>
                        <a href="@Url.Action("Index", "JobPostManagement")" class="btn btn-outline-secondary">
                            <i class="fas fa-briefcase mr-2"></i>
                            Quản lý tin đăng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
