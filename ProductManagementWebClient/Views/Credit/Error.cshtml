@{
    ViewData["Title"] = "Lỗi giao dịch";
    Layout = "~/Views/Shared/_JobPostManagementLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="text-danger mb-3">Có lỗi xảy ra</h2>

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    else
                    {
                        <p class="lead mb-4">
                            Đã xảy ra lỗi trong quá trình xử lý giao dịch.
                            Vui lòng thử lại sau.
                        </p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Deposit", "Credit")" class="btn btn-primary mr-2">
                            <i class="fas fa-redo mr-2"></i>
                            Thử lại
                        </a>
                        <a href="@Url.Action("Index", "JobPostManagement")" class="btn btn-outline-secondary">
                            <i class="fas fa-briefcase mr-2"></i>
                            Quản lý tin đăng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
